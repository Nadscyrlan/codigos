     <script>
    

    var num1 = Number(window.prompt("Informe o primeiro número:")) 
    var num2 = Number(window.prompt("Informe outro número:"))
    var resAd = num1 + num2
    var resSub = num1 - num2
    var resMult = num1 * num2
    var resDiv = num1 / num2
    var resRes = num1 % num2
    var resPot = num1 ** num2

    document.write (resAd + "<br/>)")
    document.write (resSub + "<br/>)")
    document.write (resMult + "<br/>)")
    document.write (resDiv + "<br/>)")
    document.write (resRes + "<br/>)")
    document.write (resPot + "<br/>)")

    var num = 2
    
    num = num + 2
    num += 2

    num = num - 2
    num -= 2

    num = num * 2
    num *= 2
   
    num = num / 2
    num /= 2
   
    num = num % 2
    num %= 2
   
    num = num ** 2
    num **= 2
   
    num = num + 1
    num = num - 1

    num ++ / ++num
    num -- / --num

    /* Operadores de condição
    > - maior que
    < - menor que
    >= maior ou igual que
    <= - menor ou igual que
    == igual 
    != diferente

     Operador Ternario

     condição ? true : false

    */

    Ex: num1 > num2 ? document.write("sim") : document.write("não")

    /* Operadores Lógicos 

    && - E 
    || - ou 
    !  - negação
    
    */


    </script>
