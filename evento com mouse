<div id="area" onclick="clique()" onmouseenter="entrar()" onmouseout="sair()"> interação...</div>

<script>
    var acao = document.getElementById('area')

    function clique(){
        acao.innerText = "Cliquei"
        acao.style.background = 'blue'
    }

    function entrar(){
        acao.innerText = "Entrei"
        acao.style.background = 'green'
    }


    function sair(){
        acao.innerText = "Sair"
        acao.style.background = 'red'

    }
</script>




    </body>
