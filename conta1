<body>
    
    <script>
    
    var num1 = Number(window.prompt("Informe a sua nota:")) 
    var num2 = Number(window.prompt("Informe a segunda nota:")) 
    var num3 = Number(window.prompt("Informe a terceira:")) 
    
    var resAd = num1 + num2 + num3

    resAd = (num1 + num2 + num3) / 3

    resAd >= 7 ? document.write("PASSOU OTARIO<br>") : document.write("MAIS UM ANO ESTUDANDO BURRO <br>")


    document.write("Primeira Nota: " + num1 + "<br>")
    document.write("Segunda Nota: " + num2 + "<br>")
    document.write("Terceira Nota: " + num3 + "<br>");

    </script>
</body>
